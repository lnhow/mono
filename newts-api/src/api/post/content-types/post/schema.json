{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "title": {
      "type": "string",
      "required": true,
      "default": "Bài viết không tiêu đề"
    },
    "description": {
      "type": "text",
      "required": true,
      "default": "Mô tả bài viết"
    },
    "content": {
      "type": "richtext",
      "default": "Nội dung bài viết"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slugUrl": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
