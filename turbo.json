{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "API_*"
      ],
      "outputs": [
        "build/**",
        "dist/**",
        ".next/**"
      ]
    },
    "@hsp/app-api#build": {
      "env": [
        "API_*"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy:start": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": [
        "^db:generate"
      ],
      "outputs": [
        "generated/prisma"
      ]
    },
    "db:migrate": {
      "dependsOn": [
        "^db:migrate"
      ],
      "outputs": [
        "generated/prisma"
      ]
    },
    "db:deploy": {
      "dependsOn": [
        "^db:deploy"
      ],
      "outputs": [
        "generated/prisma"
      ]
    },
    "db:studio": {
      "dependsOn": [
        "^db:studio"
      ],
      "outputs": [
        "generated/prisma"
      ]
    }
  },
  "globalEnv": [
    "PORT"
  ],
  "ui": "tui"
}