{
  "name": "newts",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.17.1"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/newts/*",
    "packages/configs/*",
    "apps/hsp/*",
    "packages/hsp/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "start": "turbo run start",
    "start:hsp": "turbo run start --filter=@hsp/app-web...",
    "lint": "turbo run lint",
    "gen:graphql": "turbo run gen:graphql --filter=newts-web",
    "build": "turbo run build",
    "deploy:start": "turbo run deploy:start",
    "turbo": "turbo"
  },
  "packageManager": "pnpm@10.2.1",
  "devDependencies": {
    "@newts/eslint-config": "workspace:*",
    "@newts/tsconfig": "workspace:*",
    "eslint": "^8.42.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "turbo": "^2.3.3"
  }
}
