{
  "extends": "@repo/tsconfig/lib.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "@typescript-eslint"
      }
    ],
    "paths": {
      "@i18n/*": [
        "../../../apps/hsp/web/i18n/*"
      ],
      "@hsp/ui/*": [
        "./*"
      ]
    }
  },
  "include": [
    ".",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}