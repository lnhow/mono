{
  "extends": "@repo/tsconfig/lib-react.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      },
    ],
    "paths": {
      "@i18n/*": [
        "../../../apps/hsp/web/i18n/*"
      ],
      "@hsp/ui/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    ".",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
