{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../generated/prisma",
        "outDir": "./dist/generated",
        "watchAssets": true
      },
      {
        "include": "src/**/*.json",
        "outDir": "./dist/src"
      }
    ]
  }
}
