{
  "extends": "@repo/tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "baseUrl": ["."],
      "@/*": [
        "./src/*",
      ],
      "@i18n/*": [
        "./i18n/*",
      ],
      "@hsp/ui/*": [
        "../../../packages/hsp/ui/src/*",
      ],
      "content-collections": [
        "./.content-collections/generated"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [
    {
      "path": "../../../packages/hsp/ui",
    }
  ],
  "include": [
    ".",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
